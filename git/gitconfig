[alias]
  ## Aliases
  # Commit
  ci = commit -v
  ca = commit --all -v
  fixup = commit --fixup
  squash = commit --squash
  root = !echo ${PWD%$GIT_PREFIX}
  amend = commit --amend --no-edit
  cp = cherry-pick

  # History editing
  rb = rebase
  quick-rebase = !EDITOR=cat git rebase -i

  # Index manipulation
  sw = switch
  co = checkout
  cb = checkout -b
  au = add -u
  ap = add -p

  # Inspection
  st = status -sb
  hist = log --pretty='tformat:%C(auto)%h %C(auto)%s%d%C(brightblack)% an%Creset' --decorate
  ls = !git hist -5
  lsm = !git hist -10
  lsmm = !git hist -20
  g = !git hist --graph --all
  ll = !git ls --stat
  df = diff --no-prefix
  ds = diff --no-prefix --staged
  dt = diff --stat
  sdiff = !git -c delta.side-by-side=true diff
  mdr = !git diff $@ | mdr
  mds = !git diff --staged $@ | mdr
  div = !git hist ${1:-$(git upstream)}^\\! HEAD

  # Merging and rebasing
  ff = merge --ff-only
  resolve   = !sh -c 'git conflicts && $EDITOR $(git conflicts) +\"/<<<<\"'
  conflicts = !sh -c 'git st | grep "^\\\\\\(UU\\\\\\|AA\\\\\\)" | sed -e "s/^UU\\ //" -e "s/^AA\\ //"'
  mark-resolved = !git add `git conflicts`
  refresh = !git co main && git pull && git co - && git rebase main

  # Misc
  hub-clone = !sh -c 'git clone git://github.com/$0.git $1'
  id = identity
  aliases = !sh -c 'sed -e "/^\\\\[alias\\\\]/,/^\\\\[/!d" ~/.gitconfig | head -n-1 | tail -n+4'
  show-alias = !sh -c 'git config --get-regexp "alias.$0" | cut -d.  -f2-'
[color]
  branch = auto
  diff = auto
  status = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
  whitespace = red reverse
[color "status"]
  added = yellow
  changed = green
  untracked = white
[help]
  browser = firefox
[push]
  default = upstream
[rebase]
  autosquash = true
	updateRefs = true
[core]
  whitespace = trailing-space,space-before-tab,tab-in-indent
  pager = delta
	excludesfile = /home/madx/.gitignore
[interactive]
  diffFilter = delta --color-only
[delta]
  navigate = true
  line-numbers = true
[include]
  path = ~/.gitconfig.local
[merge]
  conflictstyle=diff3
[pull]
	rebase = merges
[rerere]
  enabled = true
[fetch]
  prune = true
